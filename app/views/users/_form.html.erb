<div class="row">
	<div class="col-md-6 col-md-offset-3">
	<%= form_for @user do |form|%>
		<div class="form-group">
			<%= form.label :name %>
			<%= form.text_field :name,:class=>'form-control input-md' %>
			<%= error_message form,:name%>
		</div>
		<div class="form-group">
			<%= form.label :email %>
			<%= form.text_field :email,:class=>'form-control input-md' %>
			<%= error_message form,:email%>
		</div>
		  <div class="form-group">
			<%= form.label :gender %>
			<%= form.select :gender, :collection => gender_lists%>
			<%= error_message form,:gender%>
		</div>
		<div class="form-group">
			<%= form.label :password %>
			<%= form.password_field :password,class: 'form-control' %>
			<%= error_message form,:password%>
		</div>
		<div class="form-group">
			<%= form.label :password_confirmation %>
			<%= form.password_field :password_confirmation,class: 'form-control'  %>
			<%= error_message form,:password_confirmation%>
		</div>
		<%= form.submit "Submit",:class=>'btn btn-primary'%>    
	<%end%>
  </div>
</div>