 <div class="well">
<%= form_for(event) do |f| %>
<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title,:class=>'form-control input-md' %>
  <%= error_message f,:title%>
</div>

<div class="form-group">
  <%= f.label :location %>
  <%= f.text_area :location,:class=>'form-control input-md'%>
  <%= error_message f,:location%>
</div>

<div class="form-group">
  <%= f.label :entry_fee %>
  <%= f.text_field :entry_fee,:class=>'form-control input-md'%>
  <%= error_message f,:entry_fee%>
</div>

<div class="form-group">
  <%= f.label :event_date %>
    <div id="datetimepicker1" class="input-append date">
      <%=f.text_field :event_date,:data=>{:format=>"dd/MM/yyyy hh:mm:ss"}%>
      <span class="add-on">
        <i data-time-icon="icon-time" data-date-icon="icon-calendar">
        <b>&#x2685;</b>
        </i>
      </span>
    </div>
  <%= error_message f,:event_date%>
</div>

<div class="form-group">
  <%= f.submit "Submit",:class=>"btn btn-primary btn-md"%>
</div>
<% end %>
</div>