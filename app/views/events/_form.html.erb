 <div class="well">
<%= form_for(event) do |f| %>
<div class="form-group">
  <%= f.label :titile %>
  <%= f.text_field :titile,:class=>'form-control input-md' %>
  <%= error_message f,:titile%>
</div>

<div class="form-group">
  <%= f.label :event_place %>
  <%= f.text_area :event_place,:class=>'form-control input-md'%>
  <%= error_message f,:event_place%>
</div>

<div class="form-group">
  <%= f.label :amount %>
  <%= f.text_field :amount,:class=>'form-control input-md'%>
  <%= error_message f,:amount%>
</div>

<div class="form-group">
  <%= f.label :event_date %>
    <div id="datetimepicker1" class="input-append date">
      <%=f.text_field :event_date,:data=>{:format=>"dd/MM/yyyy hh:mm:ss"}%>
      <span class="add-on">
        <i data-time-icon="icon-time" data-date-icon="icon-calendar">
        </i>
      </span>
    </div>
  <%= error_message f,:event_date%>
</div>

<div class="form-group">
  <%= f.submit "Submit",:class=>"btn btn-primary btn-md"%>
</div>
<% end %>
</div>